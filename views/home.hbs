<a href="inspection">Review all inspections</a>

<h1> Commit plant inspection </h1>
<form method="POST" action="/inspection">
  <div>
    <label for="worker_name">Worker's name</label>
    <input type="text" id="worker_name" name="worker_name">
  </div>
  <div>
    <label for="workers_assessment">Assessment of the plant</label>
    <textarea id="workers_assessment" name="workers_assessment"></textarea>
  </div>
  <div>
    <p>State of the plant: </p>
    <label for="state"></label>
    <select id="state" name="state">
      <option disabled selected value> -- select an option -- </option>
      <option value=1>1 - Quite dead</option>
      <option value=2>2 - Dying</option>
      <option value=3>3 - Fine</option>
      <option value=4>4 - Well</option>
      <option value=5>5 - Very well</option>
    </select>
  </div>
  <div>
    <button type="submit">Submit</button>
  </div>
  {{#if errMessage}}
  <p style="color: red; text-align: center">Error: {{ errMessage }}</p>
  {{/if}}
</form>